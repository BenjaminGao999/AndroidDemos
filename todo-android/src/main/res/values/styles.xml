<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>-->

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--Theme Toolbar start-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dimen_sp_14</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="actionMenuTextColor">@color/color_ffffff</item>
    </style>
    <!--Theme Toolbar end-->


    <style name="CustomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--common dialog animation start-->
    <style name="Dialog.FadeScale" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/fade_out_center</item>
    </style>

    <style name="dialog_bottom_slide">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
    </style>


